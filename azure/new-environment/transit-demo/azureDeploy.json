                        "nextHopType": "VirtualAppliance",
                        "nextHopIpAddress": "[parameters('fwPrivateLbIp')]"
                    }
                },
                {
                    "name": "local-route",
                    "properties": {
                        "addressPrefix": "[parameters('vnet1Subnet0Prefix')]",
                        "nextHopType": "VirtualAppliance",
                        "nextHopIpAddress": "[parameters('fwPrivateLbIp')]"
                    }
                },
                {
                    "name": "default-route",
                    "properties": {
                        "addressPrefix": "0.0.0.0/0",
